@model WeatherDashboard.Models.WeatherData

<div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
    <div class="relative py-3 sm:max-w-xl sm:mx-auto">
        <div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-20">
            <form asp-action="GetWeather" method="get" class="mb-8">
                <div class="flex gap-2">
                    <input type="text" name="city" class="flex-1 px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter city name">
                    <button type="submit" class="px-6 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors">Search</button>
                </div>
            </form>

            @if (Model != null)
            {
                <div class="space-y-4">
                    <h2 class="text-3xl font-bold text-gray-800">@Model.CityName</h2>
                    <div class="space-y-2">
                        <p class="text-4xl font-bold text-blue-600">@ViewBag.Fahrenheit째F (@ViewBag.Celsius째C)</p>
                        <p class="text-gray-600">Feels like: @ViewBag.FeelsLikeF째F (@ViewBag.FeelsLikeC째C)</p>
                        <p class="text-gray-600">Humidity: @Model.Main.Humidity%</p>
                        @if (Model.Weather.Any())
                        {
                            <p class="text-gray-600">Condition: @Model.Weather[0].Description</p>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>
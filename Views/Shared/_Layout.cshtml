<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WeatherDashboard</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WeatherDashboard.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="bg-white shadow-lg">
        <nav class="container mx-auto px-4">
            <div class="flex items-center justify-between h-16">
                <!-- Logo/Brand -->
                <a class="text-xl font-semibold text-gray-800 hover:text-blue-600 transition-colors" 
                   asp-area="" 
                   asp-controller="Weather" 
                   asp-action="Index">
                    SimpleWX
                </a>

                <!-- Mobile Menu Button -->
                <button class="sm:hidden p-2 rounded-lg hover:bg-gray-100" 
                        type="button" 
                        data-bs-toggle="collapse" 
                        data-bs-target=".navbar-collapse" 
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false" 
                        aria-label="Toggle navigation">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-16 6h16"></path>
                    </svg>
                </button>
            </div>

            <!-- Mobile Menu -->
            <div class="navbar-collapse collapse sm:hidden">
                <div class="py-3 space-y-2">
                    <a class="block text-gray-600 hover:text-blue-600 transition-colors" 
                       asp-area="" 
                       asp-controller="Weather" 
                       asp-action="Index">
                        Home
                    </a>
                    <a class="block text-gray-600 hover:text-blue-600 transition-colors" 
                       asp-area="" 
                       asp-controller="Home" 
                       asp-action="Privacy">
                        Privacy
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container mx-auto pb-3">
        @RenderBody()
    </main>

    <footer class="border-t py-4 mt-8 text-gray-600">
        <div class="container mx-auto px-4">
            &copy; 2024 - WeatherDashboard - 
            <a class="text-blue-600 hover:text-blue-800" 
               asp-area="" 
               asp-controller="Home" 
               asp-action="Privacy">
                Privacy
            </a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>